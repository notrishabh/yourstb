<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>New STB</title>
    <link rel="icon" href="/icon.png" type="image/x-icon">

    <link
      href="/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/main.css" />

    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />
  </head>

  <body id="page-top">
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('partials/sidebar', { dashboard : '', payments : '',
      complaints : '',worker : '', offlinePayments : '', offlineComplaints : '', newStb : 'active', unpaidList : '', fullList : '' }); %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <%- include('partials/topbar', {heading: 'New Set-Top-Box Connection'}); %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <% include ./partials/messages %>
            <p class="lead" style="color: red;"><%=success%></p>
            

            <h1 class="h4 mb-4 mt-5 text-gray-800 text-center">
              Enter the Details of the New Customer
            </h1>

            <div class="container-fluid mb-4" id="addForm">
                <div class="card shadow">
                    <h5 class="card-header">New Customer Form</h5>
                    <div class="card-body">
  
                      <form action="/adminPanel/newStb/add" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <div class="row">
                                <div class="col-2">
                                    <select class="form-control" name="region" required>
                                        <option value="">Select Region</option>
                                        <% for(var i=0; i< regionList.length; i++){%>
                                            <option value="<%=regionList[i].id%>"><%=regionList[i].region_name%></option>
                                        <%}%>
                                    </select>
                                </div>
                                <div class="col-10">
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Address Field" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mobile">Mobile</label>
                            <input type="text" class="form-control" id="mobile" name="mobile">
                        </div>
                        <div class="form-group">
                            <label for="stb">STB Number</label>
                            <input type="text" class="form-control" id="stb" name="stb" required>
                        </div>
                          <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i> Save</button>
                      </form>
                        </div>    
                    </div>
            </div>
              </div>


          </div>
          <%- include('partials/footer'); %>
        </div>
      </div>
    </div>

    <%- include('partials/vendor'); %>

    <!-- Page level custom scripts -->
   
  </body>
</html>
