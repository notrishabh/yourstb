<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Full List</title>
    <link rel="icon" href="/icon.png" type="image/x-icon">

    
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
  
    <link rel="stylesheet" href="/main.css">

    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>
 
 <body id="page-top">
   <div id="wrapper">
        <!-- Sidebar -->
          <%- include('../partials/sidebar', {
            dashboard : '',
            payments : '',
            complaints : '',
            worker : '',
            region : '',
            offlinePayments : '',
            offlineComplaints : '',
            newStb : '',
            unpaidList : '',
            fullList : 'active'
          }); %>

          <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
              <%- include('../partials/topbar', {heading: `Full List`}); %>

              <!-- End of Topbar -->
      
              <!-- Begin Page Content -->
              <div class="container-fluid">

                <div class="container-fluid">
                  <div class="row align-items-center">
                    <div class="col-md-4">
                      <h1 class="h4 mb-4 text-gray-800"><i class="fas fa-chevron-right"></i> Please select a Region </h1>
                    </div>
                  </div>
                </div>


          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Region Name</th>
                      <th>Total Connections</th>
                      <th>View</th>
                      <th>Download</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>ID</th>
                      <th>Region Name</th>
                      <th>Total Connections</th>
                      <th>View</th>
                      <th>Download</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% if(results.length){ 
                      for(var i = 0;i < results.length;i++) { 
                        %>

                        <tr>
                          <td><%= results[i].id %></td>
                          <td><%= results[i].region_name %></td>
                          <td><%= results[i].totalConnections %></td>
                          <td>
                            <a href="/adminPanel/fullList/<%=results[i].id%>" class="btn btn-primary"><i class="fas fa-book-open"></i></a>
                          </td>
                          <td>
                            <a href="/adminPanel/fullList/<%=results[i].id%>/download" class="btn btn-primary"><i class="fas fa-arrow-circle-down"></i></a>
                          </td>
                        </tr>

                    <% } 
                  }else{ %>
                    <tr>
                      <td colspan="3">No customers found</td>
                    </tr>
                  <% } %>
                    

                  </tbody>
                </table>
              </div>
            </div>
          </div>

      
                
              </div>
              <%- include('../partials/footer'); %>
            </div>
            </div>
          </div>
            
      


          <%- include('../partials/vendor'); %>

            <!-- Page level plugins -->
            <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

            <!-- Page level custom scripts -->
            <script src="/scripts/datatables.js"></script>


 </body>
 
 </html>