<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Admin Settings</title>
    <link rel="icon" href="/icon.png" type="image/x-icon">

    <link
      href="/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/main.css" />

    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />
  </head>

  <body id="page-top">
    <div id="wrapper">
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
<!-- Topbar -->
<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
      
    <!-- Sidebar Toggle (Topbar) -->
    <a href="/adminPanel" class="btn btn-primary ml-3"><i class="fas fa-house-user"></i></a>

    
    <span class="font-weight-bold ml-4" style="font-size: 3vh;" >
        Admin Settings
      </span>


    <!-- Topbar Navbar -->
    <ul class="navbar-nav ml-auto">
      

      <div class="topbar-divider d-none d-sm-block"></div>


      <!-- Nav Item - User Information -->
      <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="mr-2 d-none d-lg-inline text-gray-600 small"><%=user.name%></span>
          <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
        </a>
        <!-- Dropdown - User Information -->
        <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
          <a class="dropdown-item" href="/adminPanel/settings">
            <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
            Settings
          </a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/adminpanel/logout">
            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
            Logout
          </a>
        </div>
      </li>

    </ul>

  </nav>
  <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container">
            <% include ./partials/messages %>
            <p class="lead" style="color: red;"><%=success%></p>
            
            <div class="col-md-6 mx-auto my-5">
                <div class="card shadow mb-4 p-5">
                <h1 class="h4 mb-4 text-gray-800 text-center">
                    Change Password
                  </h1>
      
                  <form method="POST" autocomplete="off">
                      <div class="form-group">
                          <label for="newPass">New Password</label>
                          <input type="password" class="form-control" name="newPass" id="newPass" onkeyup='check();' required>
                      </div>
                      <div class="form-group">
                          <label for="confPass">Confirm Password <span id='message' class="lead ml-5"></span></label>
                          <input type="password" class="form-control" name="confPass" id="confPass" onkeyup='check();' required>
                      </div>
                      <button type="submit" class="btn btn-primary" onclick="check();" id="subBtn">Submit</button>
                  </form>
                </div>

            </div>


            </div>


          </div>
          <%- include('partials/footer'); %>
        </div>
      </div>
    </div>

    <%- include('partials/vendor'); %>

    <!-- Page level custom scripts -->
    <script>
        var check = function() {
            if (document.getElementById('newPass').value ==
                document.getElementById('confPass').value) {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = 'Matching';
                document.getElementById('subBtn').type = "submit";

            } else {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = 'Not matching';
                document.getElementById('subBtn').type = "reset";
            }
        }
    </script>
   
  </body>
</html>
