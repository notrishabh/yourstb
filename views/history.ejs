<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>History</title>
    <link rel="icon" href="/wicon.jpg" type="image/x-icon">

    <link
      href="/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/main.css" />

    <link
      href="/vendor/datatables/dataTables.bootstrap4.min.css"
      rel="stylesheet"
    />

  </head>

  <body id="page-top">
    <div id="wrapper">
      <!-- Sidebar -->
      <%- include('partials/sidebar', { dashboard : '', payments : '',
      complaints : '',history : 'active', worker : '', region : '',offlinePayments : '', offlineComplaints : '',newStb : '',unpaidList : '', fullList : '' }); %>

      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <%- include('partials/topbar', {heading: 'Customer History'}); %>

          <!-- End of Topbar -->

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <% include ./partials/messages %>
            <p class="lead" style="color: red;"><%=success%></p>
            

            <h1 class="h4 mb-4 text-gray-800">
              Enter the Details of the Customer
            </h1>

            <form class="form-inline" method="POST" autocomplete="off">
                <div class="form-group mx-sm-3 mb-2">
                  <label for="stbNumber" class="sr-only">STB Number</label>
                  <input type="text" class="form-control" id="stbNumber" name="stb" placeholder="STB Number" required>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Check Details</button>
              </form>
              

              <div style="display: <%=displayDetails%>;">
                <div class="card shadow  mb-5 mt-3 bg-white rounded border-info">
                  <h5 class="card-header">Customer Details</h5>
                  <div class="card-body">
                <% if(results != 'none'){
                 if(results){ %>
                    <h5 class="card-title"> Name : <%=results.Name%></h5>
                    <p class="card-text"> Address : <%=results.Address%></p>
                    <p class="card-text">Mobile : <%=results.Mobile%></p>
                    <p class="card-text">Stb No. : <%=results.Stb%></p>
                  </div>
                </div>
                
                <div class="card shadow mb-4">
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                          <thead>
                            <tr>
                              <th>Jan</th>
                              <th>Feb</th>
                              <th>Mar</th>
                              <th>Apr</th>
                              <th>May</th>
                              <th>Jun</th>
                              <th>Jul</th>
                              <th>Aug</th>
                              <th>Sep</th>
                              <th>Oct</th>
                              <th>Nov</th>
                              <th>Dec</th>
                            </tr>
                          </thead>
                          <tbody>  
                                <tr>
                                  <td><%= results.January %></td>
                                  <td><%= results.February %></td>
                                  <td><%= results.March %></td>
                                  <td><%= results.April %></td>
                                  <td><%= results.May %></td>
                                  <td><%= results.June %></td>
                                  <td><%= results.July %></td>
                                  <td><%= results.August %></td>
                                  <td><%= results.September %></td>
                                  <td><%= results.October %></td>
                                  <td><%= results.November %></td>
                                  <td><%= results.December %></td>
            
                                </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                  <% }else{ %>
                    <h5 style="color: red;">No Customer found.</h5>
                  <% } 
                   } %>
                </div>
              </div>


          </div>
          <%- include('./partials/footer'); %>
        </div>
      </div>
    </div>

    <%- include('./partials/vendor'); %>

    <!-- Page level custom scripts -->

    <!-- Page level plugins -->
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/scripts/datatables.js"></script>

    <script>
        $('#dataTable').dataTable({
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": true,
            "bInfo": false,
            "bAutoWidth": false,
            "searching" : false,
            "ordering" : false
        });
    </script>
   
  </body>
</html>
