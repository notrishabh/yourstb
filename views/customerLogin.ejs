        }
        #logo{
            height: 48px;
            padding-left: 3% ;
        }
        #right-nav{
            padding-right: 3%;
        }
        #navbar-right-link{
            font-size: 16px;
            color: #890505;
            margin-right: 20px
        }
        #navbar-right-link:hover{
            color: #bb4747;
        }
        #text{
            font-family: 'Poppins', serif;
            margin: 10%;
