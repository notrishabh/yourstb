                <div id="youCanBox">
                <h2>You can :</h2>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">View your Profile</li>
                    <li class="list-group-item">Pay your Bills</li>
                    <li class="list-group-item">File a Complaint</li>
                  </ul>
                  <h4 id="loginaftertext">After you Login</h4>
                  </div>
                  
            </div> 
            <div class="col-md-4 ml-auto" id="form">
                <h4 style="margin-bottom: 5%;">Login as a Customer</h4>
                <form action="/" method="POST" autocomplete="off">
                    <div class="form-group">
                        <% include ./partials/messages %>
                        <p class="lead" style="color: red;"><%=error%></p>
                        <label for="stbNumber">Set-Top-Box Number</label>
                        <input type="text" class="form-control" name="stbNumber" placeholder="XXXXXXXX" required>
                    </div>
                    <button type="submit" class="btn btn-outline-danger">Login</button>
                </form>
            </div>
        </div>
    
        </div>

      
